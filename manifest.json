{
   "manifest_version": 2,

    "name": "Salt Link",
    "description": "Directs users to publicly available links",
    "version": "2.0.2",
    "content_security_policy":"script-src 'self' https://ajax.googleapis.com https://www.gstatic.com/ https://salt-link.firebaseio.com; object-src 'self'",
    "icons": {
        "128": "logo.png"
    },
    "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html",
    "background": {
        "scripts": ["./assets/js/main.js"]
    }
  },
  "homepage_url": "http://nicksalt.me"
}